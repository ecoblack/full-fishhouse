<% provide(:title, "Категории продукции") %>
<p id="notice"><%= notice %></p>





<h1 style="font-family: 'Open Sans', sans-serif; font-style: oblique;">Категории продукции:</h1>

<div>
 
    
   
  
<ul class="breadcrumb">
 
    <% @categories.each do |category| %>

    
              
        <li style="font-size: 1.2em;"><%= link_to category.name, category %> </li>
        
        <% end %>
        
    </ul>  
    
 
</div>

<br>




<div class="grid">
  <% @categories.each do |category| %>

    <div class="img-item" style="position: relative;">

      <%= link_to (image_tag(category.image, class: 'img-responsive', style: "height:100%;")), category,  class: 'gallery' %> 

     <%= link_to(category, class: 'project-link') do %> 
        <div class="onhover">
            
             <p class="brand"><%= category.name.upcase %></p>

        </div>

    <% end %> 
</div>
   
 
  <% end %> 

</div>
