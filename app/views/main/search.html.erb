<div class="row">
  <div class="col">
    <h1>Продукция</h1>
    <% @products.each do |product| %>
      <p><%= link_to product.name, product %></p>
    <% end %>
  </div>

  <div class="col">
    <h1>Категории</h1>
    <% @categories.each do |category| %>
      <p><%= link_to category.name, category  %></p>
    <% end %>
  </div>
</div>